<div class="row">
  <div class="col-lg-12">
    <a class="btn btn-default" href="/conference/{{conference.id}}/admin/news/create">{{t 'Create'}}</a>
  </div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfpagetable" we-search-field="title" we-dt-actions-edit="/conference/{{conference.id}}/admin/news/|||id|||" we-dt-actions-view="/conference/{{conference.id}}/news/|||id|||" we-dataTable-url="/conference/{{conference.id}}/news">
          <thead>
            <tr>
              <th we-model-attr="id">id</th>
              <th we-model-attr="name">name</th>
              <th we-model-attr="title">title</th>
              <th we-model-attr="text">text</th>
              <th we-model-attr="image">image</th>
              <th we-model-attr="weModelActions">actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{name}}</td>
              <td>{{title}}</td>
              <td>{{text}}</td>
              <td>{{image}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    we.components.dataTable('#cfpagetable' 
    );

    /*we.components.dataTable('#cfpagetable', {
      where: { conferenceId: {{conference.id}} }
    }); */
  });
</script>