<div class="row">
  <div class="col-lg-12">
    <a class="btn btn-default" href="/conference/{{conference.id}}/admin/registration/create">{{t 'conference.register.user'}}</a>
  </div>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table table-striped table-hover sorted_table" id="cfregistrationtable" we-search-field="title" we-dt-actions-edit="/conference/{{conference.id}}/admin/registration/|||id|||" we-dt-actions-view="/conference/{{conference.id}}/registration/|||id|||" we-dataTable-url="/conference/{{conference.id}}/admin/registration">
          <thead>
            <tr>
              <th we-model-attr="id">id</th>
              <th we-model-attr="userId">userId</th>
              <th we-model-attr="conferenceTypeId">conferenceTypeId</th>
              <th we-model-attr="status">status</th>
              <th we-model-attr="updatedAt">updatedAt</th>
              <th we-model-attr="weModelActions">actions</th>
            </tr>
          </thead>
          <tbody>
          {{#each record}}
            <tr>
              <td>{{id}}</td>
              <td>{{userId}}</td>
              <td>{{conferenceTypeId}}</td>
              <td>{{status}}</td>
              <td>{{updatedAt}}</td>
              <td></td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    we.components.dataTable('#cfregistrationtable', {
      where: { conferenceId: {{conference.id}} },
      actionRender: function actionRender(table, data, d,record) {
        var  tags = '<a href="/conference/{{conference.id}}/admin/registration/'+record.id+'/accept" text="{{t "coference.registration.accept"}}" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-ok"></i></a>';

        tags += '<a href="/conference/{{conference.id}}/admin/registration/'+record.id+'" text="{{t "Edit"}}" class="btn btn-default btn-sm"><i class="glyphicon glyphicon-pencil"></i></a>';
        return tags;
      }
    });
  });
</script>